{
  "manifest_version": 3,
  "name": "ChatGPT Carbon Footprint Tracker",
  "version": "1.0",
  "description": "Track your ChatGPT usage and carbon footprint",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
